# ============================================
# SHOPINTELLI AI FRONTEND - PRODUCTION
# ============================================
# Production configuration

# ============================================
# APPLICATION
# ============================================
VITE_APP_NAME=ShopIntelli AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# ============================================
# API ENDPOINTS (Production)
# ============================================
VITE_API_URL=https://api.shopintelli.yourdomain.com
VITE_ADMIN_API_URL=https://api.shopintelli.yourdomain.com/admin
VITE_AI_SERVICE_URL=https://ai.shopintelli.yourdomain.com

# ============================================
# FEATURES
# ============================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false

# ============================================
# UI SETTINGS
# ============================================
VITE_PRODUCTS_PER_PAGE=20
VITE_MAX_IMAGE_SIZE_MB=10
VITE_SUPPORTED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
VITE_SUPPORTED_VIDEO_TYPES=mp4,mov,avi,wmv

# ============================================
# PAGINATION
# ============================================
VITE_DEFAULT_PAGE_SIZE=20
VITE_PAGE_SIZE_OPTIONS=10,20,50,100

# ============================================
# DEVELOPMENT TOOLS (Disabled)
# ============================================
VITE_SHOW_API_ERRORS=false
VITE_SHOW_CONSOLE_LOGS=false
VITE_HOT_RELOAD=false

# ============================================
# AUTHENTICATION
# ============================================
VITE_TOKEN_STORAGE_KEY=shopintelli_token
VITE_ADMIN_TOKEN_STORAGE_KEY=shopintelli_admin_token
VITE_TOKEN_EXPIRY_HOURS=12

# ============================================
# PUSHER (Production Real-time)
# ============================================
VITE_PUSHER_APP_KEY=your-pusher-key
VITE_PUSHER_HOST=
VITE_PUSHER_PORT=443
VITE_PUSHER_SCHEME=https
VITE_PUSHER_APP_CLUSTER=us2

# ============================================
# ANALYTICS
# ============================================
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ============================================
# ERROR TRACKING
# ============================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# CDN (Optional)
# ============================================
VITE_CDN_URL=https://cdn.shopintelli.yourdomain.com
VITE_STATIC_ASSETS_URL=https://static.shopintelli.yourdomain.com

# ============================================
# LEGACY SUPPORT (for backward compatibility)
# ============================================
REACT_APP_API_URL=https://api.shopintelli.yourdomain.com
REACT_APP_NAME=ShopIntelli AI
REACT_APP_VERSION=1.0.0
